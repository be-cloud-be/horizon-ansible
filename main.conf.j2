# {{ ansible_managed }}
upstream oddo-implychat{
  server 127.0.0.1:8092 weight=10;
}
upstream oddo-imply {
  server 127.0.0.1:8089 weight=10;
}
server {
    listen              80;
    listen              [::]:80;
    server_name         {{inventory_hostname}};

    access_log  /var/log/nginx/oddo-imply.access.log;
    error_log   /var/log/nginx/oddo-imply.error.log;

    proxy_buffers 16 64k;
    proxy_buffer_size 128k;

    proxy_set_header    X-Forwarded-Host $host;
    proxy_set_header    Host            $host;
    proxy_set_header    X-Real-IP       $remote_addr;
    proxy_set_header    X-Forwarded-For $proxy_add_x_forwarded_for;

    location / {
        proxy_pass  http://oddo-imply;
        proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
        proxy_redirect off;
    }

    location /longpolling {
        # enables Odooâ€™s live chat feature
        proxy_pass http://oddo-implychat;
    }
    
    location ~* /web/static/ {
        proxy_cache_valid 200 60m;
        proxy_buffering on;
        expires 864000;
        proxy_pass http://oddo-imply;
    }
    
    # common gzip
    gzip_types text/css text/less text/plain text/xml application/xml application/json application/javascript;
    gzip on;

}
